<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_rl"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".bottomPlayer.BottomPlayerFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#696969"/>
    
    <ImageView
        android:id="@+id/music_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/album"
        android:layout_margin="2dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/music_picture"
        android:layout_alignTop="@id/music_picture">
        <TextView
            android:id="@+id/song_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/music_name"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/singer_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/singer"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/play_or_pause_iv"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/ic_black_play"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="2dp" />

</RelativeLayout>
